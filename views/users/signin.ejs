<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <h1 class="offset-3">SignIn on Wanderlust</h1>
    <div class="col-6 offset-3">
        <form action="/signIn" method="POST" class="needs-validation" novalidate >
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username"  class="form-control" placeholder="Enter Username" id="username" required>
                <div class="valid-feedback">
                   Looks good!
                  </div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password"  class="form-control" placeholder="Enter password" id="password" required>
                
            </div>
           
            <button class="btn btn-success">SignIn</button>
        </form>

    </div>
</div>