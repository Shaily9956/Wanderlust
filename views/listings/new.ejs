<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
        <br><br>
   
    <h3>Create New Listings</h3>
    <form method="post" action="/listings">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]"  class="form-control" placeholder="Enter Title">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
<textarea type="text"  name="listing[description]"class="form-control"></textarea>

        </div>
<div class="mb-3">
    <label for="url" class="form-label">Image Link</label>

    <input type="text"  name="listing[image]" class="form-control" placeholder="Enter Image Url/Link">
</div>
<div class="row">
    <div class="mb-3 col-md-4">
        <label for="price" class="form-label">Price</label>
    
        <input type="number" name="listing[price]" class="form-control" placeholder="1200">
    </div>
    <div class="mb-3 col-md-8">
        <label for="country" class="form-label">Country</label>
    
        <input type="text" name="listing[country]" class="form-control"  placeholder="India">
    </div>
</div>

<div class="mb-3">
    <label for="location" class="form-label">Location</label>
    <input type="text" name="listing[location]"  class="form-control" placeholder="Jaipur,Rajasthan">
</div>

<button class="btn btn-danger">Add</button><br><br>
    </form>
</div>
</div>
</body>
</html>