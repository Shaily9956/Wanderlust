<% layout("/layouts/boilerplate") %>
    <div class="row">
        <div class="col-8 offset-2">
            <h3>Listing Details</h3>
        </div>
        <div class="col-6 offset-2 show-card">
            <div class="card">
                <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing_image">
                <div class="card-body">
                    <p class="card-text"><b>
                            <%=listing.title %>
                        </b><br>
                        <%=listing.description %> <br> &#8377;<%=listing.price.toLocaleString("en-IN") %>
                                <br>
                                <%=listing.location %> <br>
                                    <%=listing.country %>
                    </p>
                </div>
            </div>
        </div>
        <br>
        <div class="buttons">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-2 edit-btn">Edit</a>
            <form method="post" action="/listings/<%= listing._id %>?_method=DELETE"><button
                    class="btn btn-dark  offset-4 delete-btn">Delete</button></form>

        </div>







    </div>